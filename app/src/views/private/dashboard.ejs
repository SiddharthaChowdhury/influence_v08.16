<% include ../../partials/dashboard_partials/head %>
	<div class="container" id="dashboard_view">
		<div class="row">
			<div class="col-md-4">
				<a href="/profile">
					<h5><i class="fa fa-cogs" aria-hidden="true"></i>  <small>Logged in user ~</small></h5>
					<h1 class="text-center"><%= typeof user.name == 'undefined' ? user.email : user.name %></h1>
					<h5>Profile completion : </h5>
					<div class="progress">
					  <div class="progress-bar-info text-center progress-bar-striped" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:70%">
					    70%
					  </div>
					</div>
				</a>
			</div>
			<div class="col-md-8 dashboard-primary-menu-container">
				<ul class="dashboard-primary-menu pull-right">
					<li><a href="/space"> Space</a></li>
					<li><a href="/team"> Team</a></li>
					<li><a href="#"> People</a></li>
					<li><a href="/profile"> Profile</a></li>
					<li><a href="/FAQ"> FAQs</a></li>
				</ul>
			</div>
		</div>

		<hr>
		<div class="row">
			<div class="col-md-7">
				<div class="h3">Writings <small>(1)</small><a href="#" class="view-all"> View all</a></div>
				<hr>
				<div class="col-md-12">
					<div class="col-md-3">10-July-2016</div>
					<div class="col-md-9">Managing nginx and configuring load balancer to handle incoming traffic effectively</div>
				</div>
			</div>
			<div class="col-md-5">

				<div class="panel-group" id="accordion">
				    <div class="panel panel-default">
					    <div class="panel-heading">
					        <h4 class="panel-title">
					          <a data-toggle="collapse" class="jq_asyncFetch" data-fetched="false" data-id="<%= user.uid %>" data-fetch="spaces" data-parent="#accordion" href="#collapse2">Spaces <small>(<%= user.spaces.length %>)</small></a>
					        </h4>
					    </div>
					    <div id="collapse2" class="panel-collapse collapse">
					        <div class="panel-body">
					        	<label>Please wait &nbsp;<i class="fa fa-refresh fa-spin"></i> </label>
					        </div>
					    </div>
				    </div>
				    <div class="panel panel-default">
					    <div class="panel-heading">
					        <h4 class="panel-title">
					          <a data-toggle="collapse" class="jq_asyncFetch" data-fetched="false" data-id="<%= user.uid %>" data-fetch="teams" data-parent="#accordion" href="#collapse3">Teams <small>(<%= user.teams.length %>)</small></a>
					        </h4>
					    </div>
					    <div id="collapse3" class="panel-collapse collapse">
					        <div class="panel-body">
					        	<label>Please wait &nbsp;<i class="fa fa-refresh fa-spin"></i> </label>
					        </div>
					    </div>
				    </div>
				</div>
			</div>
		</div>
	</div>
<% include ../../partials/dashboard_partials/foot %>
