<% include ../../partials/dashboard_partials/head %>
	<div class="container" id="dashboard_view">
		<div class="row">
			<div class="col-md-4">
				<a href="/profile">
					<h5><i class="fa fa-cogs" aria-hidden="true"></i>  <small>Logged in user ~</small></h5>
					<h1 class="text-center"><%= typeof user.name == 'undefined' ? user.email : user.name %></h1>
					<h5>Profile completion : </h5>
					<div class="progress">
					  <div class="progress-bar-info text-center progress-bar-striped" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:70%">
					    70%
					  </div>
					</div>
				</a>
			</div>
			<div class="col-md-8 dashboard-primary-menu-container">
				<ul class="dashboard-primary-menu pull-right">
					<li><a href="/space"> Space</a></li>
					<li><a href="/team"> Team</a></li>
					<li><a href="#"> People</a></li>
					<li><a href="/profile"> Profile</a></li>
					<li><a href="/FAQ"> FAQs</a></li>
				</ul>
			</div>
		</div>

		<hr>
		<div class="row">
			<div class="col-md-7">
				<div class="h3">The Tree</div>
				<div class="col-md-12">
					<div class="tree well">
							<ul>
								<li class="parent_li">
									<span data-toggle="tooltip" data-placement="right" title="This is your PERSONAL space. Any pages you create here, will be visible to only you and no one else.">
										<i class="fa fa-shield" aria-hidden="true"></i> Personal
									</span> <a href="#" class="prespace-context-cog"><i class="fa fa-cog" aria-hidden="true"></i></a>
								</li>
								<li class="parent_li">
									<span data-toggle="tooltip" data-placement="right" title="This is the PUBLIC space. Any pages you create here, will be visible publicly.">
										<i class="fa fa-globe" aria-hidden="true"></i> Public
									</span> <a href="#" class="prespace-context-cog"><i class="fa fa-cog" aria-hidden="true"></i></a>
								</li>
								<li><hr></li>
					<%if( spaces.length == 0 ){ %> 
							
								<li>
									<small>It seems you dont have any space created.<a href="/space"> Please start with creating a space.</a></small>
								</li>
							</ul>
						</div>
					<%}else{%>			
								<%for( var i in spaces ){%> 
									<li class="parent_li">
										<span class="fetch_teams" data-fetched="false" data-id="<%= spaces[i]['_id'] %>" data-fetch="teams" data-toggle="tooltip" data-placement="right" title="[ CODE : <%= spaces[i]['space_code'] %> ] <%= spaces[i]['space_desc'] %>">
											<i class="fa fa-cubes" aria-hidden="true"></i> <%= spaces[i]['space_name'] %>
										</span> <a href="#" class="prespace-context-cog"> <i class="fa fa-cog" aria-hidden="true"></i></a>
									</li>
								<%}%>
							</ul>
						</div>
					<%}%>
				</div>
			</div>
			<div class="col-md-5">

			</div>
		</div>
	</div>
	<div class="context-menu1">
		<a class="close-context-menu" href="javascript:;">x</a>
		<ul class="list-group">
			<li class="list-group-item">
				<a href="#item-1" class="" data-toggle="collapse">New page</a>
				<ul class="list-group collapse" id="item-1">
					<li class="list-group-item">WYSIWYG</li>
					<li class="list-group-item">Markdown</li>
				</ul>
			</li>
			<li class="list-group-item">All pages</li>
			<!-- <li class="list-group-item">Third item</li> -->
		</ul>
	</div>
<% include ../../partials/dashboard_partials/foot %>
